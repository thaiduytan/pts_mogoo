mixin teamItem(src="././images/img-team1.png",name="Matthew Dix", position="Graphic Design")
	.team-item 
		.team-main 
			img.team-image(src= src, alt="TeamIMG")
			.team-content
				if block 
					block 
		.team-info 
			h3.team-name= name
			span.team-position= position
mixin workItem(src="", icon="", title="", desc="",classItem ="")
	.work-item(class= classItem)
		img.work-image(src= src)
		.work-content 
			img.work-icon(src= icon)
			h3.work-title= title
			span.work-desc= desc
mixin peopleItem(src, name, job, desc)
	li.people-item 
		img.people-avatar(src= src)
		.people-info 
			h3.people-name= name
			span.people-job= job
			p.people-desc= desc
mixin quoteItem(src,type = false, desc="asd", author="asd")
	.quote-item 
		if type == false
			.quote-icon 
				img(src= src)
		else 
			img(src= src).quote-image
		.quote-info 
			p.quote-desc= desc
			span.quote-author= author