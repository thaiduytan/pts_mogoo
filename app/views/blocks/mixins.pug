mixin ListItem(title, caption)
	li.item 
		h2.title= title
		if caption 
			span.caption= caption
		if block 
			block

mixin menuLink(title,href="#")
	li.header-menu-item 
		a.header-menu-link(href=href)= title
mixin headerBottomItem(data)
	.header-bottom-item(class= data.class)
		span.header-bottom-number= data.number
		span.header-bottom-text= data.title
mixin blockBox(caption, title, desc)
	.block-box 
		h3.block-box-caption= caption 
		h2.block-box-title= title 
		if desc 
			p.block-box-desc= desc
mixin aboutItem(src, iconClass, title, alt="ABC....")
	.about-item
		img.about-image(src=src, alt=alt) 
		.about-content 
			i.about-icon(class= iconClass)
			span.about-title= title
mixin numberItem(count="42", text="ABC")
	.number-item
		h3.number-item-count= count
		span.number-item-text= text 
mixin serviceItem(src,title,desc,alt="hello")
	.service-item 
		img.service-item-icon(src=src , alt= alt)
		.service-item-info 
			h3.service-item-title= title
			p.service-item-desc= desc
